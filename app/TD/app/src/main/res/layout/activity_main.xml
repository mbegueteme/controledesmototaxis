<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/img4"
    tools:context="."
   >

    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/back"
       />
    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="welcome"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/back_icon"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="20dp"
        android:hint="Email"
        android:paddingLeft="5dp"
        android:layout_below="@id/welcome"
        android:layout_marginTop="90dp"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="20dp"
        android:paddingLeft="5dp"
        android:hint="Password field"
        android:layout_below="@id/userName"
        android:layout_marginTop="25dp"
        android:inputType="textPassword"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/linear"
        android:padding="7dp"
        android:background="@drawable/round0"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/password"
        android:layout_marginTop="60dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/validation"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_check_circle_24"
            />
        <TextView
            android:id="@+id/signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:labelFor="@+id/validation"
            android:text="Sign in"
            android:textColor="#5DA860"/>


    </LinearLayout>
    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textSize="17dp"
        android:paddingLeft="5dp"
        android:text="Forgot password ?"
        android:layout_below="@id/password"
        android:layout_marginTop="70dp"
        android:textStyle="italic"
        android:textColor="#F41B0B"/>

    <TextView
        android:id="@+id/newAcount"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textSize="25dp"
        android:paddingLeft="5dp"
        android:text="New acount !"
        android:layout_below="@id/forgot"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"

        android:textColor="#253FD1"/>





</RelativeLayout>